<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/worker2"
            android:contentDescription="Servify Logo"
            android:layout_marginBottom="16dp" />

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Servify"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servify is your one-stop solution for connecting with trusted service providers in your locality. Whether you need a plumber, electrician, carpenter, or any local service, Servify makes it quick and hassle-free to find reliable professionals."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Animated Key Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Features:"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Easy signup and login for users and service providers.\n• Browse and book services with just a few clicks.\n• Transparent pricing and reviews for informed decisions.\n• Secure payments and real-time notifications."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Mission with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/target"
                android:contentDescription="Mission Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission:"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To empower individuals and businesses by providing them with a trusted platform to connect and collaborate. At Servify, we believe in simplifying lives, saving time, and promoting local talent."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Contact Us with Clickable Links -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us:"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email"
                android:contentDescription="Email Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jobinbiju691@gmail.com"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="16sp"
                android:autoLink="email" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone"
                android:contentDescription="Phone Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8921254255"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="16sp"
                android:autoLink="phone" />
        </LinearLayout>

        <!-- Back to Home Button -->
         <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Back"
        android:onClick="back" />
    </LinearLayout>
</ScrollView>
